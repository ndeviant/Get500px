{
		"manifest_version": 2,
 
		"name": "Get500px",
		"description": "This extension will add download button to 500px picture",
		"author": "Deviant.GQ",
		"version": "0.1.1",
 
		"browser_action": {
				"default_icon": "images/Get500px.png",
				"default_title": "Get500px"
		},

		"icons": {
				"16": "images/Get500px_16.png",
				"32": "images/Get500px_32.png",
				"48": "images/Get500px_64.png",
				"128": "images/Get500px_128.png"
		},

		"commands": {
			"_execute_browser_action": {
				"suggested_key": {
					"default": "Ctrl+Shift+Space",
					"mac": "MacCtrl+Shift+Space"
				},
				"description": "Opens wanted picture"
			}
		},

		"permissions": [
			"*://*/*",
			"tabs",
			"activeTab",
			"storage"
		],

		"background": {
			"scripts": ["background.js"],
			"persistent": false
		},

		"content_scripts": [{
			"matches": ["https://500px.com/*/*", "https://drscdn.500px.org/*/*"],
			"js": ["content_script.js"]
		}]
}